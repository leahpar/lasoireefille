<!doctype html>

<html lang="en">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, minimum-scale=1.0">

    <title>{{ block('title') }}</title>

    <!-- Add to homescreen for Chrome on Android -->
    <meta name="mobile-web-app-capable" content="yes">
    <meta name="mobile-web-app-title" content="Soirée fille">
    <link rel="icon" sizes="192x192" href="resources/lasoireefille-192px.png">

    <!-- Add to homescreen for Safari on iOS -->
    <meta name="apple-mobile-web-app-capable" content="yes">
    <meta name="apple-mobile-web-app-status-bar-style" content="default">
    <meta name="apple-mobile-web-app-title" content="Soirée fille">
    <link rel="apple-touch-icon" sizes="76x76"   href="resources/lasoireefille-76px.png">
    <link rel="apple-touch-icon" sizes="152x152" href="resources/lasoireefille-152px.png">
    <link rel="apple-touch-icon" sizes="192x192" href="resources/lasoireefille-192px.png">
    <link rel="apple-touch-startup-image" href="/resources/lasoireefille.png">

    <!-- Web favicon -->
    <link rel="shortcut icon" type="image/png" href="resources/lasoireefille-favicon.png">


    <link rel="stylesheet" href="resources/lasoireefille.css">
    <link rel="stylesheet" href="https://fonts.googleapis.com/icon?family=Material+Icons">
    <link rel="stylesheet" href="https://code.getmdl.io/1.1.3/material.pink-cyan.min.css" />

</head>
<body>

<div class="mdl-layout mdl-js-layout mdl-layout--fixed-header">
    <header class="mdl-layout__header">
        <div class="mdl-layout__header-row">
            <!-- Title -->
            <span class="mdl-layout-title">{{ block('title') }}</span>

            {#<div class="mdl-layout-spacer"></div>#}

            {#<nav class="mdl-navigation mdl-layout--large-screen-only">#}
                {#<a class="mdl-navigation__link" href="{{ path_for('mousse_voter') }}">Voter pour les mousses</a>#}
                {#<a class="mdl-navigation__link" href="{{ path_for('mousse_classement') }}">Voir le classement</a>#}
            {#</nav>#}
        </div>
    </header>

    <div class="mdl-layout__drawer mdl-menu--options">
        <span class="mdl-layout-title">La mousse</span>
        <nav class="mdl-navigation" style="flex-grow: 1;">
            <a class="mdl-navigation__link" href="{{ path_for('attendance') }}">Répondre à l'appel</a>
            <a class="mdl-navigation__link" href="{{ path_for('mousse_voter') }}">Voter pour les mousses</a>
            <a class="mdl-navigation__link" href="{{ path_for('mousse_classement') }}">Classement des mousses</a>
            <a class="mdl-navigation__link" href="{{ path_for('delestage') }}">Opération délestage</a>
            <div class="mdl-layout-spacer"></div>
            <a class="mdl-navigation__link" href="#">{{ user.name }}</a>
        </nav>
    </div>


    <main class="mdl-layout__content">
        <div class="page-content">

            {% block content %}{% endblock %}

        </div>
    </main>



    {#<footer class="mdl-mini-footer">#}
        {#<div class="mdl-mini-footer__left-section">#}
            {#<div class="mdl-logo">La mousse de la soirée fille</div>#}
            {#<ul class="mdl-mini-footer__link-list">#}
                {#<li><a href="#">Help</a></li>#}
                {#<li><a href="#">Privacy & Terms</a></li>#}
            {#</ul>#}
        {#</div>#}
    {#</footer>#}
</div>

<script src="https://code.getmdl.io/1.1.3/material.min.js" defer></script>
<script src="//cdnjs.cloudflare.com/ajax/libs/list.js/1.2.0/list.min.js"></script>
<script src="//code.jquery.com/jquery-2.2.4.min.js"></script>
<script src="resources/lasoireefille.js"></script>

</body>
</html>